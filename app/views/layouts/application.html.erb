<!DOCTYPE html>



<html>
  <head>
    <title>Naganocake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    
    <!--flash massage-->
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <header>
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <ul class="navbar-nav ml-auto">
            <%= link_to "管理者ページ", new_admin_session_path, class: 'btn btn-default' %>
            <% if admin_signed_in? %>
            <%= link_to "商品一覧", admin_items_path, class: 'btn btn-default' %>
            <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-default' %>
            <%= link_to "注文履歴一覧", admin_top_path, class: 'btn btn-default' %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-default' %>
            <br>
            <% elsif customer_signed_in? %>
            <!--条件文つけるeksif-->
      <div class="row">
     <br>
      <h2>ようこそ！
      <%= current_customer.last_name + current_customer.first_name %>さん
      </h2>
      <div class="col">
            <li class="nav-item"><br>
            <%= link_to "マイページ", customers_path, class: 'nav-link text-dark' %> 
            </li>
            <%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %>
            <%= link_to "カート", cart_items_path, class: 'nav-link text-dark' %>
            <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: 'nav-link text-dark' %>
            <% else %>
            <li class="nav-item">
            <%= link_to "About", about_path, class: 'nav-link text-dark' %> 
            </li>
            <%= link_to "商品一覧", items_path, class: 'nav-link text-dark' %>
            <%= link_to "新規会員登録", new_customer_registration_path, class: 'nav-link text-dark' %>
            <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark' %>
            <% end %>
      </div>
      </div>
      </ul>
      </div>
      </nav>
    </header>
  <main class="mb-auto">
    
    <%= yield %>
    </main>
    <footer class="bg-dark text-white pt-5 pb-4">
      
    </footer>
  </body>
</html>
