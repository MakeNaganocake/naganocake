<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-8 offset-md-1">
            <table class="table table-hover table-inverse">
                <thead>
                    <h1>商品一覧</h1>
                    <%= link_to "商品新規登録", new_admin_item_path, class: 'btn btn-default' %>
                    <tr>
                        <th>商品ID</th>
                        <th>商品名</th>
                        <th>税抜価格</th>
                        <th>ジャンル</th>
                        <th colspan="3"></th>
                    </tr>
                  </thead>
                  <tbody>
                      <% @items.each do |item| %>
                      <tr>
                          <td>
                              <%= item.id %>
                          </td>
                          <td>
                              <%= link_to item.name, admin_item_path(item.id) %>
                          </td>
                          <td>
                              <%= item.price %>
                          </td>
                          <td>
                          </td>
                      </tr>
                      <% end %>
                  </tbody>
            </table>
        </div>
    </div>
</div>
