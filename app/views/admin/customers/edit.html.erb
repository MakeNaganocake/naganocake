<div class="container">
    <h1>会員情報編集</h1>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id) do |f| %>
 <div class="field row">
   <div class="col-md-4">会員ID</div>
   <%= @customer.id %>
 </div>  
 <div class="field row">
   <div class="col-md-4">名前</div>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class:"col-md-3" %>
    <br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class:"col-md-3" %>
 </div>
 <div class="field row">
   <div class="col-md-4">フリガナ</div>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "email", class:"col-md-3" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "email", class:"col-md-3" %>
</div>  
<div class="field row">
    <div class="col-md-5">郵便番号（ハイフンなし）</div>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "email", class:"col-md-3" %>
</div>
<div class="field row">
    <div class="col-md-5">住所</div>
    <%= f.text_field :address, autofocus: true, autocomplete: "email", class:"col-md-6" %>
</div>
<div class="field row">
    <div class="col-md-5">電話番号</div>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "email", class:"col-md-3" %>
  </div>
<div class="field row">
   <div class="col-md-5">メールアドレス</div>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-3" %>
</div>

  <div class="actions">
    <%= f.submit "変更を保存" %>
  </div>
         <% end %>
</div>