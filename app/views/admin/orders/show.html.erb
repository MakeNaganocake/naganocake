<div class="container">
<h2><%= @order.customer.last_name %><%= @order.customer.first_name %>さんの注文履歴</h2>

<div class="row">
     <div class="col-md-8 offset-md-1">
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>購入者</th>
                        <th>注文日</th>
                        <th>配送先</th>
                        <th>支払方法</th>
                    </tr>
                </thead>
            <tbody>
                <tr>
                    <td><%= @order.name %></td>
                    <td><%= @order.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                    <td><%= @order.postal_code %> <%= @order.address %></td>
                    <td><%= @order.payment_i18n %></td>
                </tr>    
            </tbody>
            </table>
        </div>            
    </div>                
</div>
<div class="row">
     <div class="col-md-8 offset-md-1">
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価</th>
                        <th>数量</th>
                        <th>小計</th>
                    </tr>
                </thead>
            <tbody>
                <% @order_lists.each do |order_list| %>
                <tr>
                    <td><%= order_list.item.name %></td>
                    <td><%= order_list.item.price %></td>
                    <td><%= order_list.amount %></td>
                    <td><%= order_list.ordered_price %></td>
                </tr>
                <% end %>
            </tbody>
            </table>
        </div>            
    <div class="col-md-4 offset-md-1">
        <table class="table table-hover table-inverse">
            <thead>
                <tr>
                    <th>商品合計</th>
                    <th>送料</th>
                    <th>請求金額合計</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= @order.total_payment %></td>
                    <td>800</td>
                    <td><%= @order.total_payment + 800 %></td>
                </tr>
            </tbody>
        </table>    
</div>
</div>
