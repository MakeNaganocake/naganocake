<h1>マイページ</h1>

<table class="table table-bordered">
    <tbody>
        <tr>
            <th scope="row">
                名前
            </th>
            <td>
                <%= @customer.last_name %><%= @customer.first_name %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                カナ
            </th>
            <td>
                <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                郵便番号
            </th>
            <td>
                <%= @customer.postal_code %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                住所
            </th>
            <td>
                <%= @customer.address %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                電話番号
            </th>
            <td>
                <%= @customer.telephone_number %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                メールアドレス
            </th>
            <td>
                <%= @customer.email %>
            </td>
        </tr>
    </tbody>
    
    配送先
    注文履歴
    
</table>