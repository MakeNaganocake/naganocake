<div class="container">
    <div class="row">
<h1>マイページ</h1>
<table class="table table-bordered">
<th scope="row">
   <%= link_to "編集", edit_customers_path, class: 'btn btn-success' %>
</th>
    <tbody>
        <tr>
            <th scope="row">
                名前
            </th>
            <td>
                <%= @customer.last_name %><%= @customer.first_name %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                カナ
            </th>
            <td>
                <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                郵便番号
            </th>
            <td>
                <%= @customer.postal_code %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                住所
            </th>
            <td>
                <%= @customer.address %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                電話番号
            </th>
            <td>
                <%= @customer.telephone_number %>
            </td>
        </tr>
        <tr>
            <th scope="row">
                メールアドレス
            </th>
            <td>
                <%= @customer.email %>
            </td>
        </tr>
    </tbody>
    <th scope="row">
    <%= link_to "配送先", class: "btn btn-primary" %>
    </th>
    <th scope="row">
    <%= link_to "注文履歴", orders_path, class: "btn btn-primary" %>
    </th>
</table>
</div>
</div>
