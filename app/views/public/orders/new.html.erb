<div class="container">
<%= form_with model: @order, url: confirm_path do |f| %>
<h2>支払方法</h2>
<%= f.radio_button :payment, Order.payments.key(0) %>
<%= f.label :payment, Order.payments_i18n[:credit_card] %>
<br>
<%= f.radio_button :payment, Order.payments.key(1) %>
<%= f.label :payment, Order.payments_i18n[:transfer] %>
<br>
<h2>お届け先</h2>
<%= f.radio_button :distination, '1' %>
<%= f.label :distination, "ご自身の住所", value: 1 %>
<br>
<%= current_customer.postal_code %>
<%= current_customer.address %>
<%= current_customer.last_name + current_customer.first_name %>
<br>
<br>
<%= f.radio_button :distination, '0' %>
<%= f.label :distination, "新しい住所", value: 0 %>
<br>
<div>郵便番号（ハイフンなし）</div><%= f.text_field :postal_code %>
<div>住所</div><%= f.text_field :address %>
<div>宛名</div><%= f.text_field :name %>
<br>
<br>
<%= f.submit "確認画面へ進む", class: 'btn btn-success' %>
<% end %>
</div>