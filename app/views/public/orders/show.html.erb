<div class="container">
注文履歴詳細
<table class="table table-bordered">
<h3>注文情報</h3>
  <tr>
    <th>注文日</th>
          <td>
              <%= @order.created_at.strftime("%Y-%m-%d %H:%M") %>
          </td>
  </tr>
  <tr>
      <th>配送先</th>
          <td>
               <%= @order.postal_code %>
               <%= @order.name %>
               <%= @order.address %>
          </td>
   </tr>      
   <tr>      
      <th>支払方法</th>
          <td>
              <%= @order.payment_i18n %>
          </td>
   </tr>
</table>

<h3>請求情報</h3>
<table class="table table-bordered">
  <tr>
   <th>商品合計</th>
   <td><%= @order.total_payment %></td>
   </tr>
   <tr>
   <th>配送料</th>
   <td>800</td>
   </tr>
   <tr>
     <th>ご請求額</th>
     <td><%= @order.total_payment + 800 %></td>
  </tr>  
</table>

<h3>注文内容</h3>
<table class="table table-bordered">
<thead>
<tr>
    <th>商品</th>
    <th>単価</th>
    <th>個数</th>
    <th>小計</th>
</tr>
</thead>
<tbody>
  <% @order.order_lists.each do |order_list| %> 
<tr>
<!-- @orderにひもづくorder_list -->
    <th><%= order_list.item.name %></th>
    <th><%= order_list.add_tax_ordered_price %></th>
    <th><%= order_list.amount %></th>
    <th><%#= order_list.item.taxin_price * order_list.amount %>
        <%= order_list.subtotal.to_s(:dalimited) %></th>
</tr>
  <% end %>
</tbody>
</table>
</div>
