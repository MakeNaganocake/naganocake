<div class="container">
注文履歴
<table class="table table-bordered">
    <% @orders.each do |order| %>
        <thead>
            <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>注文詳細</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>
                    <%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), order_path(order.id) %>
                </th>
                <th>
                    <%= order.postal_code %>
                    <%= order.name %>
                    <%= order.address %>
                </th>
                <th>
                    <% order.order_lists.each do |order_item| %>
                      <%= order_item.item.name %>
                    <% end %>
                </th>
                <th>
                    <%= order.total_payment %>
                </th>
                <th>
                    <%= link_to "表示する", order_path(current_customer) %>
                </th>
            </tr>
        </tbody>
    <% end %>    
</table>
    
</div>