<div class="container">
    <h1>注文情報確認</h1>
    <table class="table table-bordered">
    <thead>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
    </thead>
    <tbody>
        <tr>
            <%= @order_item %>
        </tr>
        <td>
            <%= @order_item.order_quantity %>
        </td>
        <td>
            <%= @order_item.amount %>
        </td>
        <td>
            <%= total.round.to_s(:delimited) %>
        </td>
    </tbody>
</table>
</div>